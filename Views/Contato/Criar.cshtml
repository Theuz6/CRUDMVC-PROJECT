@model ContatoModel
@{
    ViewData["Title"] = "Criar Contato";
}

<div class="text-center">
    <h1 class="display-4">Criar Contato</h1>

    <form method="post" asp-controller="Contato" asp-action="Criar">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="Nome" id="floatingInput" placeholder="nome">
            <label for="floatingInput">Nome</label>
        </div>
        <div class="form-floating mb-3">
            <input type="email" class="form-control" asp-for="Email" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email</label>
        </div>
        <div class="form-floating mb-3 ">
            <input type="text" class="form-control"  asp-for="Telefone" id="floatingInput" placeholder="telefone">
            <label for="floatingInput">Telefone</label>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a role="button" class="btn btn-danger" asp-controller="Contato" asp-action="Index">Voltar</a>
    </form>

</div>
